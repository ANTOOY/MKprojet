{% extends 'base.html.twig' %}

{% block title %}Gérer les catégories{% endblock %}

{% block body %}
<h1 class="text-center">Gérer les catégories</h1>
<br>
<a class="btn btn-secondary" href="{{path("admin_categories_ajout")}}" role="button">Ajouter une catégorie</a>
<br>
<br>
<table class="table table-striped table-secondary">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nom</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for categorie in categories %}
    <tr>
      <td>{{categorie.id}}</td>
      <td>{{categorie.name}}</td>
     
      <td class="text-center"><a class="btn btn-secondary" href="{{path("admin_categories_modifier", {id: categorie.id})}}" role="button">Modifier</a>
</td>
      
    </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}