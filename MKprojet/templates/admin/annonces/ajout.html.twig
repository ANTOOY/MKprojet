{% extends 'base.html.twig' %}


{% block title %}Ajouter une article{% endblock %}




    {% block body %}
   
  
<br>

    <div class="row container bg-dark text-white" >
    <h4 class="text-center ">Ajouter un article</h4>
    <br>
    {{ form_start(form) }}
    <div class="row">
    <div class="title-ann col">
     <h6> {{ form_row(form.title) }}</h6>
    </div>
    <br>
    <div class="col">
    <h6>{{ form_row(form.categories) }}</h6>
    </div>
    </div>
    <br>
    <h6>{{ form_row(form.content) }}</h6>

     {% if form.vars.value.images != "" %}
      
       <img class="img-size-little" src="/uploads/images{{ form.vars.value.images }}" >
     {% endif %}
    {{ form_row(form.images) }}
    <br>
    <br>
   
     <div class="price-ann col"><h6>{{ form_row(form.price)}}</h6>  </div>
  
    <div class="col">
    <h6> {{ form_end(form) }}</h6>
     </div>
      </div>
      <br>
      <br>
      <br>
     {% endblock %}